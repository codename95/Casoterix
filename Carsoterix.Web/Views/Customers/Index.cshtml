@model IEnumerable<Carsoterix.Web.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if(!Model.Any())
{
    <p>We do not have any Customers on this platform yet.</p>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Membership Type
                </th>
                <th>
                    Discount Rate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.CustomerName, "CustomerInfo", "Customers", new {id = customer.CustomerId })
                    </td>
                    <td>
                        @customer.MembershipType.MembershipTypeName
                    </td>
                    <td>
                       @customer.MembershipType.Discount%
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


