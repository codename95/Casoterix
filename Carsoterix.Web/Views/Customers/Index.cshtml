@model IEnumerable<Carsoterix.Web.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if(!Model.Any())
{
    <p>We do not have any Customers on this platform yet.</p>
}
else
{
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Membership Type
                </th>
                <th>
                  Bank
                </th>
                <th>
                    Discount Rate
                </th>
                <td>

                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.CustomerName, "CustomerInfo", "Customers", new {id = customer.CustomerId }, null)
                    </td>
                    <td>
                        @customer.MembershipType.MembershipTypeName
                    </td>
                    <th>
                      @customer.Bank.BankName
                    </th>
                    <td>
                       @customer.MembershipType.Discount%
                    </td>
                    <td>
                        @Html.ActionLink("View", "CustomerInfo", "Customers", new { id = customer.CustomerId }, null) &nbsp;|
                        @Html.ActionLink("Edit", "Edit", "Customers", new { id = customer.CustomerId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


