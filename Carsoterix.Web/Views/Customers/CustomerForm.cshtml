@model Carsoterix.Web.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>
<hr />

<div class="col-md-12">
    <div class="col-md-6">
        <div class="jumbotron">
            <p>  Join Carsoterix today and get started with luxury and vintage Cars!</p>
            <img src="~/Content/Images/NewUserIcon.png" width="420" />
        </div>

    </div>
    <div class="col-md-6">
        <div class="jumbotron">
            @using (@Html.BeginForm("Save", "Customers"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.CustomerName)
                    @Html.TextBoxFor(m => m.Customer.CustomerName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.BirthDate);
                    @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.MembershipTypeId)
                    @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MembershipTypeName"), "Select Membership", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.CreditCardInformation)
                    @Html.TextBoxFor(m => m.Customer.CreditCardInformation, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.BankId)
                    @Html.DropDownListFor(m => m.Customer.BankId, new SelectList(Model.Banks, "BankId", "BankName"), "Select Bank", new { @class = "form-control" })
                </div>

                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribe to Newsletter?
                    </label>
                </div>

                <div class="form-group">
                    @Html.HiddenFor(m => m.Customer.CustomerId)
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>